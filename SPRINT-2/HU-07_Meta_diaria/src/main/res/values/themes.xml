<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Paqu" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Paqu" parent="Base.Theme.Paqu">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Estilos personalizados SIMPLIFICADOS (elimina las referencias a Material3) -->
    <style name="PaquTitle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaquButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="GoalCardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>